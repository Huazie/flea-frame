<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	<persistence-unit name="fleamanagement" transaction-type="RESOURCE_LOCAL">
		<!-- provider -->
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<!-- Connection JDBC -->
		<class>com.huazie.frame.common.base.auth.entity.Menu</class>
		<class>com.huazie.frame.common.base.auth.entity.MenuFavorite</class>
		<class>com.huazie.frame.common.base.auth.entity.Role</class>
		<class>com.huazie.frame.common.base.auth.entity.RoleAccountGrant</class>
		<class>com.huazie.frame.common.base.auth.entity.RoleMenuGrant</class>
		<class>com.huazie.frame.common.base.cfgdata.entity.FleaParaDetail</class>
		<class>com.huazie.frame.common.base.file.entity.UploadFile</class> 
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/fleamanagement?useUnicode=true&amp;characterEncoding=UTF-8" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="root" />
			<!--<property name="eclipselink.ddl-generation" value="create-tables"/> -->
		</properties>
	</persistence-unit>
	
</persistence>
